<header>
  <div id="logo">Chitter</div>
  <div id="user-peeps">
    <% if current_user %>

        <h1 id='welcome'>Welcome, <%= current_user.username %></h1>
       
        <form action="/sessions" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" class='button' value="Sign out">
        </form>

        <div id="new-message">
            <form action="/messages" method="post">
                <input type="text" name="content">
                <input type="submit" value="Peep!">
            </form>
        </div>

    <% else %>

        <a href='/sessions/new' id='sign-in' class='button'>Sign in</a>
        <a href='/users/new' id='sign-up' class='button'>Sign up</a>
        
    <% end %>
  </div>
</header>